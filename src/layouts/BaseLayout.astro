---
import type { HTMLAttributes } from 'astro/types';

import BaseHead from '~/components/BaseHead.astro';
import Footer from '~/components/Footer.astro';
import Header from '~/components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '~/consts';

interface Props extends HTMLAttributes<'main'> {
	class?: string;
	description?: string;
	title?: string;
}

const {
	class: className = '',
	description = SITE_DESCRIPTION,
	title: propTitle,
	...attributes
} = Astro.props;

let title = '';
if (propTitle) {
	title = `${propTitle} – ${SITE_TITLE}`;
} else {
	title = `${SITE_TITLE} – ${SITE_DESCRIPTION}`;
}
---

<html lang="en">
	<head>
		<BaseHead description={description} title={title} />
	</head>
	<body class="bg-black text-white text-lg">
		<Header />
		<main
			{...attributes}
			class:list={['xl:max-w-screen-xl mx-auto px-10', className]}
			itemid={Astro.url.toString()}
			itemref="author"
			itemscope
			itemtype="http://schema.org/Blog"
		>
			<slot />
		</main>
		<Footer />
		<slot name="end" />
		<script
			data-id="b8bf436e-c545-43aa-bb4d-e03697bc5bd2"
			data-utcoffset="1"
			src="https://cdn.counter.dev/script.js"></script>
	</body>
</html>
