---
import type { Polymorphic } from 'astro/types';

type Props = {
	class?: string;
} & Polymorphic<{ as: 'h1' | 'h2' | 'h3' }>;
const { as: Component = 'h1', class: className, ...attributes } = Astro.props;
---

<Component
	itemprop="headline"
	{...attributes}
	class:list={['text-title font-thin', className]}
>
	<slot />
</Component>
