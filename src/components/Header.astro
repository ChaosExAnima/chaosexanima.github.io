---
import { SITE_DESCRIPTION, SITE_TITLE } from '~/consts';

import HeaderLink from './HeaderLink.astro';
---

<header class="max-w-screen-2xl mx-auto my-10">
	<nav class="flex gap-4 items-center justify-between">
		<div>
			<h2 class="text-2xl mb-2"><a href="/">{SITE_TITLE}</a></h2>
			<h3 class="italic font-light text-base">{SITE_DESCRIPTION}</h3>
		</div>
		<ol class="flex gap-4">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">Hi!</HeaderLink>
			<HeaderLink href="/pronouns">My Pronouns</HeaderLink>
		</ol>
	</nav>
</header>
