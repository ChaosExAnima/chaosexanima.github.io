---
import type { HTMLAttributes, Polymorphic } from 'astro/types';

import { Image as AstroImage, type LocalImageProps } from 'astro:assets';

type ImageElement = 'div' | 'figure';

type Props = {
	alt: string | undefined;
	hash?: string;
	wrapperAttrs?: Omit<HTMLAttributes<ImageElement>, 'class'>;
	wrapperClass?: string;
} & LocalImageProps &
	Polymorphic<{ as: ImageElement }>;

const {
	alt = '',
	as: Wrapper = 'figure',
	class: className,
	hash,
	itemprop = 'associatedMedia',
	src,
	wrapperAttrs = {},
	wrapperClass,
	...props
} = Astro.props;
---

<script src="~/scripts/images.ts"></script>
<Wrapper
	{...wrapperAttrs}
	class:list={['image-filter bg-cover text-transparent', wrapperClass]}
	data-hash={hash}
	itemprop={itemprop}
	itemscope
	itemtype="https://schema.org/ImageObject"
>
	<AstroImage
		{...props}
		alt={alt}
		class:list={['object-cover object-center', className]}
		itemprop="contentUrl"
		src={src}
	/>
	{alt && <meta content={alt} itemprop="description" />}
	<slot />
</Wrapper>
