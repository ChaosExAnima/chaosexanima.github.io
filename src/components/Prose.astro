---
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<Tag extends HTMLTag> = {
	className?: string;
} & Polymorphic<{ as: Tag }>;
const { as: Component = 'article', className } = Astro.props;
---

<Component
	class:list={[
		'prose prose-invert prose-violet prose-xl prose-stone mx-auto',
		'prose-headings:font-thin hover:prose-a:text-violet-400 prose-a:transition-colors',
		className,
	]}
>
	<slot />
</Component>
