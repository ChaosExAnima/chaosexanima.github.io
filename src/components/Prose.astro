---
import type { Polymorphic } from 'astro/types';

type Props = {
	class?: string;
} & Polymorphic<{ as: 'article' | 'div' | 'footer' | 'header' }>;
const {
	as: Component = 'article',
	class: className,
	...attributes
} = Astro.props;
---

<Component
	{...attributes}
	class:list={['prose mx-auto max-w-[65ch] p-10', className]}
>
	<slot />
</Component>
